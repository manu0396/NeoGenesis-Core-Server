ENV=dev
HOST=0.0.0.0
PORT=8080
NEOGENESIS_GRPC_PORT=50051

DB_URL=jdbc:postgresql://postgres:5432/neogenesis
DB_USER=neogenesis
DB_PASSWORD=neogenesis
DB_POOL_SIZE=10
NEOGENESIS_DB_CONNECTION_TIMEOUT_MS=3000
NEOGENESIS_DB_VALIDATION_TIMEOUT_MS=1000
NEOGENESIS_DB_IDLE_TIMEOUT_MS=600000
NEOGENESIS_DB_MAX_LIFETIME_MS=1800000

JWT_MODE=hmac
JWT_ISSUER=neogenesis-auth
JWT_AUDIENCE=neogenesis-api
JWT_REALM=NeoGenesis
JWT_SECRET=dev-only-secret-change-me
JWT_TTL_SECONDS=3600
# JWT_JWKS_URL=https://issuer.example/.well-known/jwks.json

CORS_ALLOWED_ORIGINS=http://localhost:3000
RATE_LIMIT_AUTH_PER_MINUTE=10
RATE_LIMIT_TELEMETRY_PER_MINUTE=600
RATE_LIMIT_TWIN_PER_MINUTE=300
MAX_REQUEST_BODY_BYTES=1000000
REQUEST_TIMEOUT_MS=10000

# Dev-only bootstrap. Keep disabled in prod.
ADMIN_BOOTSTRAP_ENABLED=false
ADMIN_BOOTSTRAP_USER=admin
ADMIN_BOOTSTRAP_PASSWORD=admin-password
# ADMIN_BOOTSTRAP_PASSWORD_HASH=$2a$12$...

NEOGENESIS_METRICS_PATH=/metrics
NEOGENESIS_OTLP_ENDPOINT=
NEOGENESIS_OTLP_SERVICE_NAME=neogenesis-core-server

# Billing (Stripe default, disabled by default)
BILLING_ENABLED=false
BILLING_PROVIDER=fake
BILLING_PLAN_FREE_ID=free
BILLING_PLAN_PRO_ID=pro
# BILLING_PLAN_FEATURES_FREE=
# BILLING_PLAN_FEATURES_PRO=audit:evidence_export,compliance:traceability_audit

# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...
# STRIPE_PRICE_ID_FREE=price_...
# STRIPE_PRICE_ID_PRO=price_...
# STRIPE_SUCCESS_URL=https://your.app/billing/success
# STRIPE_CANCEL_URL=https://your.app/billing/cancel
# STRIPE_PORTAL_RETURN_URL=https://your.app/settings/billing

# Evidence export signing (optional, Ed25519 PKCS8 base64)
# EVIDENCE_SIGNING_KEY_B64=base64-encoded-pkcs8-private-key

NEOGENESIS_ENCRYPTION_ENABLED=false
# NEOGENESIS_PHI_KEY_B64=base64-encoded-key
# NEOGENESIS_PII_KEY_B64=base64-encoded-key

NEOGENESIS_MTLS_GRPC_ENABLED=false
# NEOGENESIS_MTLS_GRPC_CERT_CHAIN_PATH=/secrets/grpc/tls.crt
# NEOGENESIS_MTLS_GRPC_PRIVATE_KEY_PATH=/secrets/grpc/tls.key
# NEOGENESIS_MTLS_GRPC_TRUST_CERT_PATH=/secrets/grpc/ca.crt

# Optional integrations
# NEOGENESIS_MQTT_BROKER_URL=tcp://broker:1883
# NEOGENESIS_MQTT_CLIENT_ID=neogenesis-core-server
# NEOGENESIS_MQTT_TOPIC_ROOT=neogenesis/telemetry
# NEOGENESIS_MQTT_USERNAME=
# NEOGENESIS_MQTT_PASSWORD=

# NEOGENESIS_VAULT_ENABLED=false
# NEOGENESIS_VAULT_ADDRESS=https://vault.example
# NEOGENESIS_VAULT_TOKEN=
# NEOGENESIS_VAULT_MOUNT=secret

# Production overrides (required):
# ENV=production
# JWT_SECRET=<min-32-chars or use JWT_MODE=oidc + JWT_JWKS_URL>
# DB_PASSWORD=<non-empty>
# NEOGENESIS_ENCRYPTION_ENABLED=true
# NEOGENESIS_PHI_KEY_B64=<base64-key>
# NEOGENESIS_PII_KEY_B64=<base64-key>
# NEOGENESIS_MTLS_GRPC_ENABLED=true
# NEOGENESIS_MTLS_GRPC_CERT_CHAIN_PATH=/secrets/grpc/tls.crt
# NEOGENESIS_MTLS_GRPC_PRIVATE_KEY_PATH=/secrets/grpc/tls.key

COMMERCIAL_MODE=false
CONNECTOR_CERTIFICATION_MODE=false
ADMIN_WEB_MODE=false
ADMIN_API_MODE=false
# Gateway connector certification (optional client submission)
# CERTIFICATION_SERVER_URL=http://localhost:8080/admin/connectors/certify
# CERTIFICATION_TENANT_ID=tenant-1
# CERTIFICATION_CORRELATION_ID=
# CERTIFICATION_CONNECTOR_VERSION=1.0.0
# CERTIFICATION_AUTH_TOKEN=

